<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <com.rssll971.drawingapp.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_black"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
        <Button
            android:id="@+id/btn_black"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_grey"
            android:background="@drawable/btn_black"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myBlack"
            />
        <Button
            android:id="@+id/btn_grey"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_black"
            app:layout_constraintRight_toLeftOf="@id/btn_white"
            android:background="@drawable/btn_grey"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myGrey"
            />
        <Button
            android:id="@+id/btn_white"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_grey"
            app:layout_constraintRight_toLeftOf="@id/btn_red"
            android:background="@drawable/btn_white"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myWhite"
            />
        <Button
            android:id="@+id/btn_red"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_white"
            android:background="@drawable/btn_red"
            app:layout_constraintRight_toLeftOf="@id/btn_orange"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myRed"
            />
        <Button
            android:id="@+id/btn_orange"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_red"
            app:layout_constraintRight_toLeftOf="@id/btn_green"
            android:background="@drawable/btn_orange"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myOrange"
            />
        <Button
            android:id="@+id/btn_green"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_orange"
            app:layout_constraintRight_toLeftOf="@id/btn_blue"
            android:background="@drawable/btn_green"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myGreen"
            />
        <Button
            android:id="@+id/btn_blue"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_green"
            app:layout_constraintRight_toLeftOf="@id/btn_palette"
            android:background="@drawable/btn_blue"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/myBlue"
            />
        <Button
            android:id="@+id/btn_palette"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/layout_primary"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_blue"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_palette"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:onClick="colorClicked"
            android:tag="@color/purple_500"
            />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/layout_primary_background"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btn_gallery"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ibtn_primary"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_gallery"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_primary"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_undo"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/btn_brush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_primary"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_pencil"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ibtn_primary"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_save"
            android:padding="5dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>