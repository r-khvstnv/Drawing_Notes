<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_smart_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_id_Ads"
        >

    </com.google.android.gms.ads.AdView>
    <FrameLayout
        android:id="@+id/fl_image_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adView_smart_banner"
        app:layout_constraintBottom_toTopOf="@id/btn_black"
        >
        <ImageView
            android:id="@+id/iv_users_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            />
        <com.rssll971.drawingapp.DrawingView
            android:id="@+id/drawing_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            />
    </FrameLayout>

        <Button
            android:id="@+id/btn_black"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_grey"
            android:background="@drawable/btn_black"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myBlack"
            />
        <Button
            android:id="@+id/btn_grey"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_black"
            app:layout_constraintRight_toLeftOf="@id/btn_white"
            android:background="@drawable/btn_grey"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myGrey"
            />
        <Button
            android:id="@+id/btn_white"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_grey"
            app:layout_constraintRight_toLeftOf="@id/btn_red"
            android:background="@drawable/btn_white"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myWhite"
            />
        <Button
            android:id="@+id/btn_red"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_white"
            android:background="@drawable/btn_red"
            app:layout_constraintRight_toLeftOf="@id/btn_orange"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myRed"
            />
        <Button
            android:id="@+id/btn_orange"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_red"
            app:layout_constraintRight_toLeftOf="@id/btn_green"
            android:background="@drawable/btn_orange"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myOrange"
            />
        <Button
            android:id="@+id/btn_green"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_orange"
            app:layout_constraintRight_toLeftOf="@id/btn_blue"
            android:background="@drawable/btn_green"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myGreen"
            />
        <Button
            android:id="@+id/btn_blue"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_green"
            app:layout_constraintRight_toLeftOf="@id/btn_palette"
            android:background="@drawable/btn_blue"
            android:elevation="5dp"
            android:onClick="colorClicked"
            android:tag="@color/myBlue"
            />
        <Button
            android:id="@+id/btn_palette"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintBottom_toTopOf="@id/ll_primary_options"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toRightOf="@id/btn_blue"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/btn_palette"
            android:elevation="5dp"

            android:tag="@color/myPurple"
            />

    <LinearLayout
        android:id="@+id/ll_primary_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/layout_handling_background"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btn_fit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_fit"
            android:padding="5dp"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/btn_active_draw"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_active_draw"
            android:scaleType="fitXY"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/btn_transfer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_moving"
            android:padding="5dp"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_secondary_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_primary_options"
        app:layout_constraintRight_toLeftOf="@+id/ll_extra_menu"
        android:background="@drawable/layout_handling_background"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btn_undo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_undo"
            android:scaleType="fitXY"
            android:padding="5dp"
            />
        <ImageButton
            android:id="@+id/btn_brush"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_pencil_size"
            android:scaleType="fitXY"
            android:padding="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_extra_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/layout_handling_background"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/btn_info"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_info"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/btn_gallery"
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_gallery"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_share"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/btn_trash"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_trash"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/btn_rotate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_rotate"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:visibility="visible"
            />
        <ImageButton
            android:id="@+id/btn_extra_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ibtn_handling"
            android:elevation="4dp"
            android:layout_marginVertical="8dp"
            android:src="@drawable/ic_menu"
            android:scaleType="fitXY"
            android:padding="5dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>