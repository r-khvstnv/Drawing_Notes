<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_launcher_pen_foreground"
        android:scaleType="fitXY"
        android:elevation="4dp"
        />
    <TextView
        android:id="@+id/tv_apps_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:textColor="@color/myGreyDark"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_apps_name"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="Version: "
        android:textSize="22sp"
        android:textColor="@color/myGreyDark"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_apps_name"
        app:layout_constraintLeft_toRightOf="@id/tv_version"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="@string/app_version"
        android:textSize="22sp"
        android:textColor="@color/myGreyDark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:minWidth="340dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_back"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Open source licenses"
            android:textSize="26sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Apache License"
            android:textSize="22sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Version 2.0, January 2004"
            android:textSize="22sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dim_info_licences_margin_top"
            android:text=" - ColorPickerPreference"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Copyright 2018 skydoves"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dim_info_licences_margin_top"
            android:text=" - MultiTouchGestureDetector"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Copyright 2015-2019 dinuscxj"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dim_info_licences_margin_top"
            android:text=" - Dexter"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="Copyright 2015 Karumi"
            android:textSize="18sp"
            android:textColor="@color/myGreyDark"
            android:textAlignment="textStart"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/btn_white"
        android:paddingHorizontal="10dp"
        android:text="@string/st_back"
        android:textSize="22sp"
        android:textColor="@color/myGreyDark"
        />

</androidx.constraintlayout.widget.ConstraintLayout>