<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorPickerView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:orientation="vertical"
        />
    <LinearLayout
        android:id="@+id/ll_current_color"
        android:layout_width="@dimen/dim_ll_current_color_size"
        android:layout_height="@dimen/dim_ll_current_color_size"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/colorPickerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ll_line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/myGrey"
        android:orientation="horizontal"
        android:elevation="5dp"
        />


    <LinearLayout
        android:id="@+id/ll_line_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/ll_current_color"
        app:layout_constraintLeft_toRightOf="@id/ll_current_color"
        app:layout_constraintRight_toLeftOf="@id/ll_solid_color"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/ripple_ib_option_white"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:elevation="4dp"
            android:src="@drawable/ic_pencil"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line color"
            android:textColor="@color/myBlack"
            android:textSize="12sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_solid_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/ll_current_color"
        app:layout_constraintLeft_toRightOf="@id/ll_line_color"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/ripple_ib_option_white"
        android:elevation="5dp"
        >
        <ImageView
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:elevation="4dp"
            android:src="@drawable/ic_solid"
            android:scaleType="fitCenter"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solid color"
            android:textColor="@color/myBlack"
            android:textSize="12sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>