<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MCardStyle"
    android:layout_width="wrap_content"
    android:minWidth="400dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/color_picker_card_padding"
        tools:ignore="ContentDescription">

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="@dimen/color_picker_size"
            android:layout_height="@dimen/color_picker_size"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/color_picker_options_layout_margin_start"
            android:layout_marginTop="@dimen/color_picker_options_layout_margin_top"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_current_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/current_color_preview_height"
                android:layout_marginVertical="@dimen/color_picker_options_margin_vertical"
                android:orientation="horizontal"
                tools:backgroundTint="@color/mGrey" />

            <Button
                android:id="@+id/btn_line_color"
                style="@style/MButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/color_picker_options_margin_vertical"
                android:text="@string/action_line_color"
                app:icon="@drawable/ic_pencil" />

            <Button
                android:id="@+id/btn_solid_color"
                style="@style/MButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/color_picker_options_margin_vertical"
                android:text="@string/action_solid_color"
                app:icon="@drawable/ic_solid" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>